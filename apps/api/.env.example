# Database
DATABASE_URL="postgresql://user:password@localhost:5432/padel_tournament?schema=public"

# Server
PORT=3000
NODE_ENV=development

# Authentication (Clerk or Supabase)
# Option 1: Clerk
CLERK_SECRET_KEY=sk_test_xxx
CLERK_PUBLISHABLE_KEY=pk_test_xxx

# Option 2: Supabase
SUPABASE_URL=https://xxx.supabase.co
SUPABASE_ANON_KEY=xxx
SUPABASE_SERVICE_ROLE_KEY=xxx

# JWT (if not using Clerk/Supabase)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Stripe Payment Provider
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# MercadoPago Payment Provider
MERCADOPAGO_ACCESS_TOKEN=APP_USR-xxx
MERCADOPAGO_PUBLIC_KEY=APP_USR-xxx

# CORS
CORS_ORIGIN=http://localhost:3001,http://localhost:3000

# File Upload (Optional - AWS S3, Cloudinary, etc.)
AWS_ACCESS_KEY_ID=xxx
AWS_SECRET_ACCESS_KEY=xxx
AWS_REGION=us-east-1
AWS_S3_BUCKET=padel-tournament-uploads

# Or use Cloudinary
CLOUDINARY_CLOUD_NAME=xxx
CLOUDINARY_API_KEY=xxx
CLOUDINARY_API_SECRET=xxx

# Email Service (Optional - SendGrid, AWS SES, etc.)
SENDGRID_API_KEY=xxx
EMAIL_FROM=noreply@padeltournament.com

# Push Notifications (Optional - Firebase)
FIREBASE_PROJECT_ID=xxx
FIREBASE_PRIVATE_KEY=xxx
FIREBASE_CLIENT_EMAIL=xxx

# Redis (Optional - for caching and sessions)
REDIS_URL=redis://localhost:6379

# Sentry (Optional - for error tracking)
SENTRY_DSN=xxx

# Application
APP_NAME="Padel Tournament Platform"
APP_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3001
